{
    "name": "ashpos-electron",
    "version": "1.0.0",
    "description": "AshPOS Electron App",
    "main": "main.js",
    "scripts": {
      "start": "electron .",
      "dev": "concurrently \"npm run dev:next\" \"npm run dev:electron\"",
      "dev:next": "cd .. && npm run dev",
      "dev:electron": "wait-on http://localhost:3000 && electron .",
      "build": "cd .. && npm run build && npm run export",
      "export": "cd .. && next export",
      "dist": "npm run build && electron-builder",
      "pack": "electron-builder --dir",
      "dist:win": "npm run build && electron-builder --win",
      "dist:mac": "npm run build && electron-builder --mac",
      "dist:linux": "npm run build && electron-builder --linux"
    },
    "devDependencies": {
      "concurrently": "^7.6.0",
      "electron": "^25.0.0",
      "electron-builder": "^24.6.0",
      "wait-on": "^7.0.1"
    },
    "build": {
      "appId": "com.ashpos.app",
      "productName": "AshPOS",
      "directories": {
        "output": "dist"
      },
      "files": [
        "main.js",
        "preload.js",
        "../out/**/*",
        "../public/**/*",
        "node_modules/**/*"
      ],
      "win": {
        "target": "nsis",
        "icon": "../public/favicon.ico"
      },
      "mac": {
        "target": "dmg",
        "icon": "../public/favicon.ico"
      },
      "linux": {
        "target": "AppImage",
        "icon": "../public/favicon.ico"
      }
    }
  }